<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorBlackBackground</item>
    </style>

    <style name="menu_item">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="info_page_item0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="info_page_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="playlist_song_item">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_menu_items</item>
    </style>

    <style name="play_song_text">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_menu_items</item>
        <item name="android:layout_marginTop">9dp</item>
    </style>

    <style name="play_song_control_button">
        <item name="android:padding">9dp</item>
        <item name="android:background">@drawable/button_background</item>
        <!--<item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        -->
    </style>

    <!-- Notification -->
    <!-- Notification bar event text -->
    <style name="NotificationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:color">#ffffff</item>
    </style>

    <style name="NotificationTextLine1" parent="NotificationText">
        <item name="android:textColor">@color/textColorRed</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NotificationTextLine2" parent="NotificationText">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Notification bar actions -->
    <style name="NotificationAction">
        <item name="android:layout_width">@dimen/notification_action_width</item>
        <item name="android:layout_height">@dimen/notification_action_height</item>
        <item name="android:gravity">center|right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="NotificationAction.Previous" parent="@style/NotificationAction">
    </style>

    <style name="NotificationAction.Play" parent="@style/NotificationAction">
    </style>

    <style name="NotificationAction.Next" parent="@style/NotificationAction">
    </style>

    <style name="NotificationAction.Close" parent="@style/NotificationAction">
        <item name="android:layout_width">@dimen/notification_close_action_width</item>
        <item name="android:layout_height">@dimen/notification_close_action_height</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Big Notification bar actions -->
    <style name="BigNotificationAction">
        <item name="android:layout_width">@dimen/notification_big_action_width</item>
        <item name="android:layout_height">@dimen/notification_big_action_height</item>
        <item name="android:gravity">center|right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="BigNotificationAction.Previous" parent="@style/BigNotificationAction">
    </style>

    <style name="BigNotificationAction.Play" parent="@style/BigNotificationAction">
    </style>

    <style name="BigNotificationAction.Next" parent="@style/BigNotificationAction">
    </style>

    <style name="BigNotificationAction.Close" parent="@style/BigNotificationAction">
        <item name="android:layout_width">@dimen/notification_close_action_width</item>
        <item name="android:layout_height">@dimen/notification_close_action_height</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

</resources>
